{
  "name": "linkedin-job-scraper",
  "private": true,
  "scripts": {
    "web:dev": "pnpm --filter @linkedin-job-scraper/web dev",
    "scraper:clean": "pnpm --filter @linkedin-job-scraper/scraper clean",
    "scraper:build": "pnpm --filter @linkedin-job-scraper/scraper build",
    "scraper:start": "pnpm --filter @linkedin-job-scraper/scraper start",
    "scraper:lint": "pnpm --filter @linkedin-job-scraper/scraper lint",
    "scraper:lint:fix": "pnpm --filter @linkedin-job-scraper/scraper lint:fix",
    "scraper:format": "pnpm --filter @linkedin-job-scraper/scraper format",
    "tsc:check2": "pnpm -r exec -- tsc --noEmit",
    "tsc:check": "pnpm -r exec tsc --noEmit --project tsconfig.json --skipLibCheck --excludeDirectories node_modules,dist",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:check": "turbo run db:check",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "scraper": "turbo run scraper:start"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "turbo": "^2.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
