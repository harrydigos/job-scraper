{
  "name": "linkedin-job-scraper",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "client:dev": "pnpm --filter @linkedin-job-scraper/client dev",
    "scraper:clean": "pnpm --filter @linkedin-job-scraper/scraper clean",
    "scraper:build": "pnpm --filter @linkedin-job-scraper/scraper build",
    "scraper:start": "pnpm --filter @linkedin-job-scraper/scraper start",
    "scraper:lint": "pnpm --filter @linkedin-job-scraper/scraper lint",
    "scraper:lint:fix": "pnpm --filter @linkedin-job-scraper/scraper lint:fix",
    "scraper:format": "pnpm --filter @linkedin-job-scraper/scraper format",
    "format": "pnpm -r format",
    "lint": "pnpm -r lint",
    "build": "pnpm -r build"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
