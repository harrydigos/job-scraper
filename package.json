{
  "name": "job-scraper",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md}\" \"!**/.*/**\"",
    "tsc:check": "pnpm -r exec tsc --noEmit",
    "db:check": "turbo run db:check",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "scraper:dev": "turbo run scraper#dev",
    "scraper:build": "turbo run scraper#build",
    "web:dev": "turbo run web:dev",
    "playground:start": "dotenv -- turbo run playground:start"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-solid": "^0.14.5",
    "prettier": "^3.4.2",
    "sherif": "^1.3.0",
    "turbo": "^2.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
